<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="239.0" prefWidth="502.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <AnchorPane minHeight="190.0" prefHeight="190.0">
      <VBox spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Sandbox2D Dedicated Server">
            <font>
               <Font name="Open Sans Bold" size="24.0" />
            </font>
         </Text>
         <HBox alignment="CENTER_LEFT" prefHeight="10.0" spacing="10.0">
            <Text strokeType="OUTSIDE" text="Server Address">
               <font>
                  <Font name="Open Sans Bold" size="18.0" />
               </font>
            </Text>
            <TextField fx:id="ipField" promptText="localhost" HBox.hgrow="ALWAYS" />
            <Text strokeType="OUTSIDE" text="Port">
               <font>
                  <Font name="Open Sans Bold" size="18.0" />
               </font>
            </Text>
            <TextField fx:id="portField" promptText="50000" />
         </HBox>
         <HBox spacing="10.0">
            <Text strokeType="OUTSIDE" text="World File">
            <font>
               <Font name="Open Sans Bold" size="18.0" />
            </font>
            </Text>
            <TextField fx:id="worldFileField" promptText="data/worlds/world.dat" HBox.hgrow="ALWAYS" />
            <Button fx:id="browseButton" mnemonicParsing="false" text="Browse" />
         </HBox>
      </VBox>
      <HBox alignment="BOTTOM_RIGHT" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0">
         <Text fx:id="errorMessageText" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0">
            <font>
               <Font name="Open Sans Bold" size="18.0" />
            </font>
         </Text>
         <Button fx:id="startButton" defaultButton="true" mnemonicParsing="false" text="Start">
            <font>
               <Font name="Open Sans Bold" size="17.0" />
            </font>
         </Button>
      </HBox>
   </AnchorPane>
</ScrollPane>
